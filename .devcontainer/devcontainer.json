{
	"$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.base.schema.json",
	"name": "python-poetry",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "3.12",
			"DOCKER_IN_DOCKER": "1"
		},
		"options": [
			"--no-cache"
		]
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.pylint",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"njpwerner.autodocstring"
			],
			"settings": {
				"editor.fontFamily": "'JetBrainsMono Nerd Font Mono', Consolas, 'Courier New', monospace",
				"editor.fontLigatures": true,
				"python.defaultInterpreterPath": "/home/vscode/.cache/pypoetry/virtualenvs/ntpu-linebot-qOxGW-we-py3.12/bin/python"
			}
		}
	},
	"forwardPorts": [
		10000
	],
	"postCreateCommand": {
		"bash": "echo 'eval \"$(oh-my-posh init bash --config .devcontainer/shell_theme.omp.json)\"' >> ~/.bashrc",
		"zsh": "echo 'eval \"$(oh-my-posh init zsh --config .devcontainer/shell_theme.omp.json)\"' >> ~/.zshrc"
	},
	"postStartCommand": "if [ -e pyproject.toml ]; then poetry install --sync --no-root; fi"
}
